@model ProfileViewModel
<div class="container">
    <div class="d-flex justify-content-end m-1 p-1">
        <button class="btn btn-light" onclick="goEdit()">Edit Profile</button>
    </div>
    <div class="card p-1">
        <div class='card-body'>
            <p>Name</p>
            <h2 class="mx-2 my-1 px-1">@Model.Name</h2>
        </div>
    </div>
    <div class="card p-1">
        <div class='card-body'>
            <p>Email</p>
            <h2 class="mx-2 my-1 px-1">@Model.Email</h2>
        </div>
    </div>
    <div class="card p-1">
        <div class='card-body'>
            <p>Address</p>
            <h2 class="mx-2 my-1 px-1">@(!string.IsNullOrEmpty(Model.Address) ? Model.Address : "-")</h2>
        </div>
    </div>
</div>


<script defer>
    function goEdit() {
        window.location.replace("/user/edit");
    }
</script>